<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminFolder.CategoryPageActivityAdmin">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/categoryImage"
        android:src="@drawable/ready_card_img"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="12dp"

        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/user"

        android:layout_width="wrap_content"
        android:text="@string/detailAboutCategory"
        style="@style/subHeadingStyleWithBackground"
        android:gravity="center"


        android:paddingVertical="5dp"

        android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:hint="Enter Your Category Name"
        android:layout_marginHorizontal="15dp"
        style="@style/fieldsStyle"
        android:paddingVertical="12dp"
        android:id="@+id/categoryName"
        android:background="@drawable/fileds_backgroudn"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:hint="Enter Your Category Description"
        android:layout_marginHorizontal="15dp"
        style="@style/fieldsStyle"
        android:paddingVertical="12dp"
        android:id="@+id/categoryDescription"
        android:background="@drawable/fileds_backgroudn"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito"
        android:text="@string/addCategory"
        style="@style/MyButtonStyle"
        android:id="@+id/AddCategoryIntoDataBase"
        android:background="@drawable/fullwidth_button_backgroud"
        android:textStyle="normal" />
</LinearLayout>