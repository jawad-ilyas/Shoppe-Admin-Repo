<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    tools:context=".Fragments.ReadyCardOnBoardFrag">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/ready_card_img"

                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/readyHeading"
                    android:layout_width="wrap_content"
                    android:text="@string/Ready"
                    style="@style/subHeadingStyle"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:id="@+id/readySubText"
                    android:text="Ready Shopping transforms the way you shop! With a user-friendly interface and curated selections, finding the perfect products is a breeze."
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:text="@string/LetsStart"
                    style="@style/MyButtonStyle"
                    android:layout_marginHorizontal="50dp"
                    android:id="@+id/moveToCreateAcount"
                    android:background="@drawable/fullwidth_button_backgroud"
                    android:textStyle="normal" />
            </LinearLayout>


        </LinearLayout>


</LinearLayout>