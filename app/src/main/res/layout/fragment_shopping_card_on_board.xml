<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"



    tools:context=".Fragments.ShoppingCardOnBoardFrag">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/ready_card_img"

                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/shoppingHeading"
                    android:layout_width="wrap_content"
                    android:text="Shopping"
                    style="@style/subHeadingStyle"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/shoppingSubText"
                    android:layout_width="wrap_content"
                    android:text="Indulge in the joy of shopping with endless choices at your fingertips. Discover the latest trends, unbeatable deals, and effortless convenience. Elevate your style and satisfaction with every purchase."
                    android:textSize="20sp"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>


</LinearLayout>