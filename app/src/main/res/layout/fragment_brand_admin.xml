<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:orientation="vertical"
    style="@style/ActivityBackground"
    tools:context=".AdminFolder.BrandFragmentAdmin">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"

                android:layout_gravity="center"

                app:cardCornerRadius="100dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"



                    android:src="@drawable/default_user" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="50dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:background="@color/lightPrimary"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_settings_24"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="50dp"
                android:layout_marginHorizontal="2dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/lightPrimary"
                    android:src="@drawable/baseline_message_24"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="50dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/lightPrimary"
                    android:src="@drawable/baseline_message_24"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>


    <!--    heading options-->
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/options"

        style="@style/subHeadingStyle"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"/>

<!--    <Button-->
<!--        android:layout_marginHorizontal="3dp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:fontFamily="@font/nunito"-->
<!--        android:text="@string/addbrand"-->
<!--        style="@style/MyButtonStyle"-->
<!--        android:id="@+id/moveToBrandPage"-->
<!--        android:layout_marginTop="5dp"-->
<!--        android:background="@drawable/fullwidth_button_backgroud"-->
<!--        android:textStyle="normal" />-->

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:hint="Search Brand"
        style="@style/fieldsStyle"

        android:id="@+id/etSearchBrand"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        android:text="Search Brand"
        android:layout_gravity="center"
        android:id="@+id/searchBrand"
        style="@style/simpleColor"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/brands"

        style="@style/subHeadingStyle"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/brandFragmentRecyclerView"/>

</LinearLayout>