<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/ActivityBackground"
    tools:context=".AdminFolder.ShowSingleProductFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/productImage"
        android:src="@drawable/ready_card_img"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="12dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/user"

            android:layout_width="wrap_content"
            android:text="@string/ShowdetailAboutBrand"
            style="@style/subHeadingStyleWithBackground"
            android:gravity="center"



            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp"

            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"

        android:layout_marginHorizontal="15dp"
        style="@style/fieldsStyle"
        android:paddingVertical="12dp"
        android:id="@+id/productName"
        android:background="@drawable/fileds_backgroudn"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"

        android:layout_marginHorizontal="15dp"
        style="@style/fieldsStyle"
        android:paddingVertical="12dp"
        android:id="@+id/productDescription"
        android:background="@drawable/fileds_backgroudn"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"

        android:layout_marginHorizontal="15dp"
        style="@style/fieldsStyle"
        android:paddingVertical="12dp"
        android:id="@+id/productPrice"
        android:background="@drawable/fileds_backgroudn"
        android:layout_height="wrap_content"/>



</LinearLayout>